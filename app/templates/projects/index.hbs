{{outlet}}

<div class="ui segment">
  <h3>Projects List</h3>

<div class="ui segment">
{{#each this.model.projects as |project|}}

{{model.project}}

<table class="ui definition green table">
 <tbody>
   <tr>
     <td class="two wide column">Name</td>
     <td>{{project.name}}</td>
   </tr>
   <tr>
     <td>Description</td>
     <td>{{project.descriptif}}</td>
   </tr>
   <tr>
     <td>Start Date</td>
     <td>{{project.startDate}}</td>
   </tr>
   <tr>
     <td>Due Date</td>
     <td>{{project.dueDate}}</td>
   </tr>

   <tr>
     <td>Owner</td>
     <td>{{project.owner.name}} {{project.owner.fname}}</td>
   </tr>

   <tr>
     <td>Actions</td>
     <td>
       <div class="ui vertical animated red button" {{action "confirmDelete" model project}}>
         <div class="hidden content">Delete</div>
         <div class="visible content">
         <i class="trash alternate icon"></i>
         </div>
       </div>

       <LinkTo class="ui vertical animated green button" @route="projects.edit" @model={{project.id}}>
         <div class="hidden content">Edit</div>
         <div class="visible content">
         <i class="edit icon"></i>
         </div>
       </LinkTo>



          <LinkTo class="ui vertical animated green button" @route="projects.stories" @model={{project.id}}>
            <div class="hidden content">Board</div>
            <div class="visible content">
            <i class="clipboard icon"></i>
            </div>
          </LinkTo>
     </td>
   </tr>
 </tbody>
</table>

   {{/each}}
</div>
<div class="ui divider"/>
<div class="ui segment" style="text-align: center;">
  <LinkTo class="ui animated fade green button" tabindex="0" @route="projects.new">
      <div class="visible content">Add Project</div>
      <div class="hidden content">
        <i class="plus icon"></i>
      </div>
    </LinkTo>

</div>
 <!-- Valider la suppression -->
 <div class="ui modal delete">
   <div class="header">Do you want delete {{model.toDelete.name}} ?</div>
   <div class="content">
     <div class="description">
       <div class="actions">
        <div {{action "remove" model.toDelete}} class="ui green deny button">
              Yes
        </div>
        <div class="ui red deny button">
              No
        </div>
     </div>
   </div>
 </div>
</div>

</div>
