<div class="ui message attached icon">
    <i class="close icon"></i>
    <div class="content">
        <div class="header">
            Add Tag
        </div>
    </div>
</div>
<div class="ui form attached fluid segment">
  <div class="two fields">
      <div class="ui fluid labeled input field" data-children-count="1">
          <div class="ui label">
              Title
          </div>
          <Input type="text" @value={{model.title}} placeholder="Title" />
      </div>
  </div>
    {{#if model.error}}
        <div class="ui inverted red segment">
      <p>All fields are required.</p>
    </div>
    {{/if}}
    </div>


<div class="ui bottom attached message">
    <button class="ui button inverted positive icon" {{action 'addNew' model.title model.id model}}><i class="check circle icon" />
        Validate</button>
    <button class="ui button inverted red icon" ><i
            class="icon times circle outline" /> Cancel</button>
</div>


{{outlet}}
