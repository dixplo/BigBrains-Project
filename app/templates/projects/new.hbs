<div class="ui message attached icon">
  <p>{{model.developers.name}}</p>
    <i class="close icon" {{action 'backToProj' model}}></i>
    <div class="content">
        <div class="header">
            Add project
        </div>
    </div>
</div>
<div class="ui form attached fluid segment">
  <div class="two fields">

      <div class="ui fluid labeled input field" data-children-count="1">
          <div class="ui label">
              Name
          </div>
          <Input type="text" @value={{model.name}} placeholder="Name" />
      </div>
  </div>
  <div class="two fields">
        <div class="ui fluid labeled input field" data-children-count="1">
            <div class="ui label">
                Description
            </div>
            <Input type="text" @value={{model.descriptif}} placeholder="Description" />
        </div>
    </div>
    <div class="two fields">
        <div class="ui fluid labeled input field" data-children-count="1">
            <div class="ui label">
                Start date
            </div>
            <Input @value={{model.startDate}} type="date" name="dateD" placeholder="Y-M-D" class="ui input"/>
        </div>
    </div>
	<div class="two fields">
        <div class="ui fluid labeled input field" data-children-count="1">
            <div class="ui label">
                Due date
            </div>
            <Input @value={{model.dueDate}} type="date" name="dateE" placeholder="Y-M-D" class="ui input"/>
        </div>
    </div>
    <div class="ui labeled input field" data-children-count="1">
        <div class="ui label">
            Owner
        </div>

        {{#ui-dropdown class="ui selection compact" onChange=(action (mut model.developer)) as |execute mapper|}}
     <div class="default text">Select developer</div>
        <i class="dropdown icon"></i>
        <div class="menu">
           {{#each model.developers as |dev|}}
              <div data-value={{map-value mapper dev}} class="item">
                 {{dev.name}} {{dev.fname}}
              </div>
           {{/each}}
       </div>
        {{/ui-dropdown}}

    </div>
    {{#if model.error}}
        <div class="ui inverted red segment">
      <p>All fields are required.</p>
    </div>
    {{/if}}
    </div>


<div class="ui bottom attached message">
    <button class="ui button inverted positive icon" {{action 'addNew' model model.developer}}><i class="check circle icon" />
        Validate</button>
    <button class="ui button inverted red icon" {{action 'backToProj' model}}><i
            class="icon times circle outline" /> Cancel</button>
</div>

{{outlet}}
