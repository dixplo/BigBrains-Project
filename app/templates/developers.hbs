{{outlet}}

<div class="ui segment">
  <!--<LinkTo class="ui green button" style="float:right;" @route="developers.new">Add</LinkTo>-->
  <div {{action "test"}} class="ui green button" style="float:right;">Add</div>
  <h3>Developers List</h3>

  {{#each model.developers as |developer|}}
    <div class="ui green segment" id="devSegment">
        {{developer.identity}}
        {{developer.name}}
        {{developer.fname}}

          <div {{action "remove" developer}} class="ui vertical animated red button" tabindex="0" style="float:right;">
          <div class="hidden content">Delete</div>
          <div class="visible content">
          <i class="trash alternate icon"></i>
          </div>
          </div>

          <LinkTo class="ui vertical animated green button" style="float:right;" @route="developers.edit" @model={{developer.id}}>
            <div class="hidden content">Edit</div>
            <div class="visible content">
            <i class="edit icon"></i>
            </div>
          </LinkTo>
          <br>
          <br>
    </div>

    {{/each}}
</div>
